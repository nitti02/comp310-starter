#include <stdio.h>

int main() {
    int numbers[] = {1, 2, 3, 4, 5};
    int size = sizeof(numbers) / sizeof(numbers[0]); // Array Size
    int sum = 0;

    // Sum calculation
    for (int i = 0; i < size; i++) {
        sum += numbers[i];
    }

    double average = (double)sum / size; // Get the average calculation

    printf("Sum: %d\n", sum);
    printf("Average: %.2f\n", average);

    return 0;
}
